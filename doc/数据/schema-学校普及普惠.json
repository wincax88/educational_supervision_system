[
  {
    "id": "group_basic_info",
    "type": "group",
    "label": "一、基本信息",
    "description": "幼儿园基本情况",
    "width": "100%",
    "required": true,
    "children": [
      {
        "id": "kindergarten_name",
        "type": "text",
        "label": "幼儿园名称",
        "placeholder": "请输入幼儿园全称",
        "width": "50%",
        "required": true
      },
      {
        "id": "kindergarten_code",
        "type": "text",
        "label": "幼儿园代码",
        "placeholder": "请输入幼儿园代码",
        "width": "50%",
        "required": true
      },
      {
        "id": "kindergarten_type",
        "type": "select",
        "label": "办园性质",
        "width": "33%",
        "required": true,
        "options": [
          { "label": "教育部门办园", "value": "education_dept" },
          { "label": "其他部门办园", "value": "other_dept" },
          { "label": "地方企业办园", "value": "local_enterprise" },
          { "label": "事业单位办园", "value": "institution" },
          { "label": "部队办园", "value": "military" },
          { "label": "集体办园", "value": "collective" },
          { "label": "普惠性民办园", "value": "inclusive_private" },
          { "label": "非普惠性民办园", "value": "non_inclusive_private" }
        ],
        "helpText": "公办园包括：教育部门、其他部门、地方企业、事业单位、部队、集体办园"
      },
      {
        "id": "is_residential_supporting",
        "type": "select",
        "label": "是否小区配套幼儿园",
        "width": "33%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "用于统计小区配套幼儿园公办或普惠比例"
      },
      {
        "id": "founding_year",
        "type": "date",
        "label": "开园时间",
        "placeholder": "请选择开园年份",
        "width": "34%",
        "required": true,
        "helpText": "用于判断是否2017年后规划设计"
      },
      {
        "id": "residential_area_name",
        "type": "text",
        "label": "小区名称",
        "placeholder": "请输入配套小区名称",
        "width": "50%",
        "required": false,
        "showWhen": {
          "field": "is_residential_supporting",
          "value": "yes"
        }
      },
      {
        "id": "residential_area_address",
        "type": "text",
        "label": "小区地址",
        "placeholder": "请输入小区地址",
        "width": "50%",
        "required": false,
        "showWhen": {
          "field": "is_residential_supporting",
          "value": "yes"
        }
      }
    ]
  },
  {
    "id": "group_students",
    "type": "group",
    "label": "二、在园幼儿信息",
    "description": "用于统计在园幼儿数和班额情况",
    "width": "100%",
    "required": true,
    "children": [
      {
        "id": "divider_student_count",
        "type": "divider",
        "label": "在园幼儿人数",
        "width": "100%",
        "required": false
      },
      {
        "id": "total_student_count",
        "type": "number",
        "label": "在园幼儿总数",
        "placeholder": "请输入在园幼儿总数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "3-6岁在园幼儿总数，汇总后对应E002"
      },
      {
        "id": "age3_student_count",
        "type": "number",
        "label": "小班幼儿人数",
        "placeholder": "请输入小班幼儿人数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "3岁年龄段"
      },
      {
        "id": "age4_student_count",
        "type": "number",
        "label": "中班幼儿人数",
        "placeholder": "请输入中班幼儿人数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "4岁年龄段"
      },
      {
        "id": "age5_student_count",
        "type": "number",
        "label": "大班幼儿人数",
        "placeholder": "请输入大班幼儿人数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "5岁年龄段"
      },
      {
        "id": "divider_class_info",
        "type": "divider",
        "label": "班级信息",
        "width": "100%",
        "required": false
      },
      {
        "id": "class_count",
        "type": "number",
        "label": "班级总数",
        "placeholder": "请输入班级总数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "个",
        "helpText": "汇总后对应E008"
      },
      {
        "id": "class_size_qualified_count",
        "type": "number",
        "label": "班额符合规定的班级数",
        "placeholder": "请输入班额符合规定的班级数",
        "width": "25%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "个",
        "helpText": "符合《幼儿园工作规程》班额规定（小班25人、中班30人、大班35人、混合班30人），汇总后对应E009"
      },
      {
        "id": "class_student_list",
        "type": "dynamicList",
        "label": "各班级人数明细",
        "width": "100%",
        "required": true,
        "minRows": 1,
        "maxRows": 100,
        "headers": ["序号", "班级名称", "班级类型", "人数（人）", "是否符合班额规定"],
        "helpText": "小班≤25人、中班≤30人、大班≤35人、混合班≤30人为符合规定",
        "fields": [
          {
            "id": "class_index",
            "type": "number",
            "label": "序号",
            "width": "10%",
            "required": true,
            "decimalPlaces": "整数"
          },
          {
            "id": "class_name",
            "type": "text",
            "label": "班级名称",
            "width": "25%",
            "required": true
          },
          {
            "id": "class_type",
            "type": "select",
            "label": "班级类型",
            "width": "20%",
            "required": true,
            "options": [
              { "label": "小班", "value": "small" },
              { "label": "中班", "value": "middle" },
              { "label": "大班", "value": "large" },
              { "label": "混合班", "value": "mixed" }
            ]
          },
          {
            "id": "class_student_count",
            "type": "number",
            "label": "人数",
            "width": "20%",
            "required": true,
            "decimalPlaces": "整数",
            "unit": "人"
          },
          {
            "id": "class_size_qualified",
            "type": "select",
            "label": "是否符合班额规定",
            "width": "25%",
            "required": true,
            "options": [
              { "label": "是", "value": "yes" },
              { "label": "否", "value": "no" }
            ]
          }
        ]
      }
    ]
  },
  {
    "id": "group_staff",
    "type": "group",
    "label": "三、教职工信息",
    "description": "用于统计教职工配备和师幼比",
