    "required": true,
    "children": [
      {
        "id": "divider_staff_count",
        "type": "divider",
        "label": "教职工人数",
        "width": "100%",
        "required": false
      },
      {
        "id": "staff_total",
        "type": "number",
        "label": "教职工总数",
        "placeholder": "请输入教职工总数",
        "width": "20%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人"
      },
      {
        "id": "principal_count",
        "type": "number",
        "label": "园长人数",
        "placeholder": "请输入园长人数",
        "width": "20%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人"
      },
      {
        "id": "fulltime_teacher_count",
        "type": "number",
        "label": "专任教师人数",
        "placeholder": "请输入专任教师人数",
        "width": "20%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "汇总后对应E011，用于计算师幼比"
      },
      {
        "id": "nursery_teacher_count",
        "type": "number",
        "label": "保育员人数",
        "placeholder": "请输入保育员人数",
        "width": "20%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人"
      },
      {
        "id": "other_staff_count",
        "type": "number",
        "label": "其他岗位人数",
        "placeholder": "请输入其他岗位人数",
        "width": "20%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "卫生保健人员、安保人员、财务人员等"
      },
      {
        "id": "divider_staff_quota",
        "type": "divider",
        "label": "编制信息（公办园填写）",
        "width": "100%",
        "required": false
      },
      {
        "id": "staff_quota_total",
        "type": "number",
        "label": "核定编制数",
        "placeholder": "请输入编制总数",
        "width": "33%",
        "required": false,
        "decimalPlaces": "整数",
        "unit": "个"
      },
      {
        "id": "staff_in_quota_count",
        "type": "number",
        "label": "在编教职工数",
        "placeholder": "请输入在编教职工数",
        "width": "33%",
        "required": false,
        "decimalPlaces": "整数",
        "unit": "人"
      },
      {
        "id": "has_vacancy_not_filled",
        "type": "select",
        "label": "是否存在有编不补情况",
        "width": "34%",
        "required": false,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "用于判断E203公办园编制补充情况"
      },
      {
        "id": "divider_teacher_qualification",
        "type": "divider",
        "label": "教师资质",
        "width": "100%",
        "required": false
      },
      {
        "id": "principal_with_certificate_count",
        "type": "number",
        "label": "持证园长人数",
        "placeholder": "请输入持有园长资格证的园长人数",
        "width": "33%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "持有园长资格证"
      },
      {
        "id": "teacher_with_certificate_count",
        "type": "number",
        "label": "持证专任教师人数",
        "placeholder": "请输入持有教师资格证的专任教师人数",
        "width": "33%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "人",
        "helpText": "持有幼儿园教师资格证，用于判断E205教师持证上岗情况"
      },
      {
        "id": "teacher_student_ratio",
        "type": "text",
        "label": "本园师幼比",
        "placeholder": "系统自动计算，如1:12",
        "width": "34%",
        "required": true,
        "readonly": true,
        "computed": true,
        "helpText": "专任教师人数:在园幼儿总数，应不低于1:15"
      }
    ]
  },
  {
    "id": "group_staffing_standard",
    "type": "group",
    "label": "四、教职工配备达标情况",
    "description": "按《幼儿园教职工配备标准(暂行)》判定",
    "width": "100%",
    "required": true,
    "children": [
      {
        "id": "is_staff_qualified",
        "type": "select",
        "label": "教职工配备是否达标",
        "width": "50%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "按《幼儿园教职工配备标准(暂行)》配足配齐各类教职工，汇总后对应E010"
      },
      {
        "id": "staffing_standard_details",
        "type": "textarea",
        "label": "配备情况说明",
        "placeholder": "请说明教职工配备情况，如不达标请说明原因",
        "width": "100%",
        "required": false,
        "rows": 3
      }
    ]
  },
  {
    "id": "group_facilities",
    "type": "group",
    "label": "五、办园条件",
    "description": "园舍条件和配备情况",
    "width": "100%",
    "required": true,
    "children": [
      {
        "id": "divider_building",
        "type": "divider",
        "label": "建筑面积",
        "width": "100%",
        "required": false
      },
      {
        "id": "building_area",
        "type": "number",
        "label": "建筑总面积",
        "placeholder": "请输入建筑面积",
        "width": "25%",
        "required": true,
        "decimalPlaces": "2位小数",
        "unit": "平方米",
        "helpText": "生均建筑面积应≥10.44平方米"
      },
      {
        "id": "activity_room_area",
        "type": "number",
        "label": "幼儿活动用房面积",
        "placeholder": "请输入幼儿活动用房面积",
        "width": "25%",
        "required": true,
        "decimalPlaces": "2位小数",
        "unit": "平方米",
        "helpText": "生均面积应≥8.17平方米"
      },
      {
        "id": "outdoor_activity_area",
        "type": "number",
        "label": "户外活动场地面积",
        "placeholder": "请输入户外活动场地面积",
        "width": "25%",
        "required": true,
        "decimalPlaces": "2位小数",
        "unit": "平方米",
        "helpText": "生均面积应≥4平方米"
      },
      {
        "id": "is_post2017_planned",
        "type": "select",
        "label": "是否2017年后规划设计",
        "width": "25%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "用于判断E202"
      },
      {
        "id": "divider_equipment",
        "type": "divider",
        "label": "设施设备配备",
        "width": "100%",
        "required": false
      },
      {
        "id": "book_count",
        "type": "number",
        "label": "图书册数",
        "placeholder": "请输入图书册数",
        "width": "33%",
        "required": true,
        "decimalPlaces": "整数",
        "unit": "册",
        "helpText": "生均图书应达到3~5册"
      },
      {
        "id": "teaching_equipment_value",
        "type": "number",
        "label": "玩教具资产值",
        "placeholder": "请输入玩教具资产值（账面原值）",
        "width": "33%",
        "required": true,
        "decimalPlaces": "2位小数",
        "unit": "万元"
      },
      {
        "id": "is_equipment_qualified",
        "type": "select",
        "label": "玩教具配备是否达标",
        "width": "34%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "符合幼儿年龄特点的玩教具、游戏材料"
      },
      {
        "id": "divider_facility_standard",
        "type": "divider",
        "label": "达标情况",
        "width": "100%",
        "required": false
      },
      {
        "id": "is_facility_standard_qualified",
        "type": "select",
        "label": "园舍条件和配备是否达标",
        "width": "50%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "符合国家、当地的建设标准、配备要求，用于统计E201"
      },
      {
        "id": "is_post2017_standard_qualified",
        "type": "select",
        "label": "是否符合《幼儿园建设标准》",
        "width": "50%",
        "required": false,
        "showWhen": {
          "field": "is_post2017_planned",
          "value": "yes"
        },
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
        ],
        "helpText": "2017年后规划设计的幼儿园需符合《幼儿园建设标准》，用于统计E202"
      }
    ]
  },
  {
    "id": "group_finance",
    "type": "group",
    "label": "六、收费情况",
