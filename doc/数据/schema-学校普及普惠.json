  {
    "id": "group_ethics",
    "type": "group",
    "label": "八、师德师风情况",
    "description": "用于统计E207、E208",
    "width": "100%",
    "required": true,
    "children": [
      {
        "id": "has_ethics_mechanism",
        "type": "select",
        "label": "是否建立师德教育、考评、奖惩机制",
        "width": "50%",
        "required": true,
        "options": [
          { "label": "是", "value": "yes" },
          { "label": "否", "value": "no" }
